<section class="user-section">

   <div class="user-details">
    <h2><%= @user.name %></h2>
    <% if current_user %>
      <p>No</p>
    <% elsif current_user.is_friend?(@user) %>
      <p>You're already friends</p>
    <% elsif current_user.outgoing_requests.include?(@user) %>
      <p> Request still pending </p>
    <% elsif current_user.incoming_requests.include?(@user) %>
      <%= link_to 'Affirm friend', receiverequest(@user.id), method: 'post' %>
    <% else %>
      <%= link_to 'Add to friend lists', forwardrequest(@user.id), method: 'post' %>
    <% end %>
  </div>

  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
